{
  "name": "simply-blame",
  "displayName": "Simply Blame",
  "description": "Idea like git blame annotations",
  "publisher": "JamiTech",
  "version": "0.0.7",
  "repository": {
    "type": "github",
    "url": "https://github.com/JamiLu/simply-blame"
  },
  "bugs": {
    "url": "https://github.com/JamiLu/simply-blame/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "contributes": {
    "configuration": {
      "title": "SimplyBlame",
      "properties": {
        "simplyblame.enableOpenBlameEditor": {
          "type": "boolean",
          "default": false,
          "description": "Show a command to open raw blame file on the editor."
        },
        "simplyblame.heatMapColorsDark": {
          "type": "array",
          "maxItems": 11,
          "pattern": "^#[a-fA-F0-9]{6}",
          "default": [
            "#990000",
            "#910808",
            "#8a0f0f",
            "#821717",
            "#7a1f1f",
            "#732626",
            "#6b2e2e",
            "#633636",
            "#5c3d3d",
            "#544545",
            "#382e2e"
          ],
          "description": "Default dard colors of the heat map."
        },
        "simplyblame.heatMapColorsLight": {
          "type": "array",
          "maxItems": 11,
          "pattern": "^#[a-fA-F0-9]{6}",
          "default": [
            "#ffcccc",
            "#fccfcf",
            "#fad1d1",
            "#f7d4d4",
            "#f5d6d6",
            "#f2d9d9",
            "#f0dbdb",
            "#eddede",
            "#ebe0e0",
            "#e8e3e3",
            "#e6e6e6"
          ],
          "description": "Default dard colors of the heat map."
        },
        "simplyblame.dateFormat": {
          "type": "string",
          "default": "system",
          "scope": "window",
          "description": "Specifies how to format absolute dates for the inline blame annotation. See the [Moment.js docs](https://momentjs.com/docs/#/displaying/format/) for supported formats"
        }
      }
    },
    "activationEvents": [
      "*"
    ],
    "commands": [
      {
        "command": "simply-blame.openBlameInEditorDebugCommand",
        "title": "Open raw blame file",
        "enablement": "config.simplyblame.enableOpenBlameEditor"
      },
      {
        "command": "simply-blame.simplyBlame",
        "title": "Simply Blame"
      }
    ],
    "keybindings": [
      {
        "command": "simply-blame.simplyBlame",
        "key": "alt+b"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "simply-blame.openBlameInEditorDebugCommand",
          "group": "Other",
          "when": "config.simplyblame.enableOpenBlameEditor"
        },
        {
          "command": "simply-blame.simplyBlame",
          "group": "Other"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "copy-fixtures": "cp -r ./src/test/fixtures ./out/test/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "pretest-copy-fixtures": "npm run pretest && npm run copy-fixtures",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-sinon": "^2.0.2",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "moment": "^2.30.1"
  }
}
